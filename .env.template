# ==================================
# Environment Variables Template
# ==================================
# Copy this file to .env and fill in actual values
# NEVER commit .env to version control

# Database
DATABASE_URL=postgresql://username:password@db.xxx.supabase.co:5432/postgres
DB_USERNAME=postgres
DB_PASSWORD=your_supabase_password

# Redis
REDIS_URL=rediss://default:password@endpoint.upstash.io:6379

# JWT Authentication
JWT_SECRET=your_256_bit_secret_key_generate_using_openssl_rand_base64_32

# Payment Gateway (Razorpay)
# Get from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=rzp_live_xxxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=xxxxxxxxxxxxxxxxxxxxxxxx
RAZORPAY_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxx

# eSign Provider (Digio)
# Get from: https://app.digio.in/
DIGIO_API_KEY=your_digio_api_key_base64_encoded

# Blockchain (Polygon Mumbai Testnet)
# For production, use Polygon Mainnet
POLYGON_RPC_URL=https://rpc-mumbai.maticvigil.com
POLYGON_PRIVATE_KEY=0xabcdef... # Your wallet private key
POLYGON_CONTRACT_ADDRESS=0x123456... # Deployed smart contract address

# Cloud Storage (Cloudflare R2)
# Get from: https://dash.cloudflare.com/
R2_ENDPOINT=https://account-id.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_BUCKET_NAME=legalpay-contracts

# SMS Gateway (MSG91)
MSG91_AUTH_KEY=your_msg91_auth_key
MSG91_SENDER_ID=LGLPAY
MSG91_DLT_ENTITY_ID=your_dlt_entity_id

# Email (Gmail SMTP or AWS SES)
GMAIL_USERNAME=your-app@gmail.com
GMAIL_APP_PASSWORD=your_16_char_app_password

# Application
PORT=8080
SPRING_PROFILES_ACTIVE=prod
