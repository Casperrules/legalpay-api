# ================================
# Backend Environment Variables
# ================================

# Payment Gateway Configuration
PAYMENT_PROVIDER=razorpay
RAZORPAY_KEY_ID=rzp_test_XXXXXXXXXXXXXX
RAZORPAY_KEY_SECRET=YYYYYYYYYYYYYYYY
RAZORPAY_WEBHOOK_SECRET=whsec_ZZZZZZZZZZZZZ

# Blockchain Configuration (Polygon)
# For development: Use Mumbai testnet
# For production: Use Polygon mainnet
BLOCKCHAIN_ENABLED=true
BLOCKCHAIN_NETWORK=polygon-mumbai
BLOCKCHAIN_RPC_URL=https://rpc-mumbai.maticvigil.com
BLOCKCHAIN_PRIVATE_KEY=YOUR_WALLET_PRIVATE_KEY_HERE
BLOCKCHAIN_CONTRACT_ADDRESS=DEPLOYED_CONTRACT_ADDRESS_HERE
BLOCKCHAIN_GAS_PRICE=1000000000
BLOCKCHAIN_GAS_LIMIT=300000
BLOCKCHAIN_CONFIRMATION_BLOCKS=5

# Application URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8080

# Database (Development - H2)
# No configuration needed for H2 in-memory database

# Database (Production - PostgreSQL)
DATABASE_URL=jdbc:postgresql://localhost:5432/legalpay
DB_USERNAME=legalpay
DB_PASSWORD=YOUR_DB_PASSWORD

# JWT Security
JWT_SECRET=YOUR_SUPER_SECRET_JWT_KEY_CHANGE_THIS_IN_PRODUCTION

# Email Service Configuration
# Get API key from: https://resend.com/api-keys (Free: 3000 emails/month)
RESEND_ENABLED=true
RESEND_API_KEY=re_XXXXXXXXXXXX
EMAIL_FROM=noreply@legalpay.in

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379

# Spring Profile
SPRING_PROFILES_ACTIVE=local
